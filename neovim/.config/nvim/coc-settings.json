{
	"suggest.noselect": true,
	"suggest.maxPreviewWidth": 80,
	"suggest.enablePreview": true,
	"suggest.floatEnable": true,
	"suggest.detailField": "preview",
	"suggest.echodocSupport": true,
	"suggest.completionItemKindLabels": {
    "text": "",
    "method": "ƒ",
		"function": "",
    "constructor": " ",
    "field": "ﴲ ",
    "variable": "[]",
    "class": "",
    "interface": "蘒",
    "module": "",
    "property": "",
    "unit": "塞",
    "value": "",
    "enum": "練",
    "keyword": "",
    "snippet": "זּ",
    "color": " ",
    "file": "",
    "reference": "",
    "folder": "ﱮ",
    "enumMember": " ",
    "constant": "",
    "struct": " ",
    "event": "",
    "operator": "",
    "typeParameter": "<>",
		"default": "-"
	},
	"coc.preferences.useQuickfixForLocations": true,
	"coc.preferences.hoverTarget": "float",
	"codeLens.enable": true,

	"coc.source.file.ignoreHidden": false,
	"coc.source.syntax.priority": 99,
	"coc.source.syntax.filetypes": ["arch", "awk", "automake", "cabal", "cmake", "conf", "config", "conkyrc", "crontab", "desktop", "diff", "dircolors", "dirpager", "fstab", "git", "gitcommit", "gitconfig", "gitsendmail", "godoc", "gpg", "groff", "help", "html", "i3", "less", "mail", "mailaliases", "make", "man", "manconf", "manual", "markdown", "matlab", "muttrc", "neomuttrc", "netrc", "netrw", "nix", "nroff", "perl", "pgn", "plaintex", "rasi", "sshconfig", "snippets", "snippets_snipmate", "syntax", "template", "texinfo", "texmf", "tmux", "xdefaults"],
	"coc.source.word.enable": true,
	"coc.source.word.shortcut": "﬜",
	"coc.source.word.priority": 1,
	"coc.source.tmuxcomplete.enable": true,
	"coc.source.tmuxcomplete.priority": 3,
	"coc.source.tmuxcomplete.shortcut": "",
	"coc.source.email.firstMatch": true,
	"coc.source.email.shortcut": "",

	"solargraph.trace.server": "messages",
	"solargraph.promptDownload": true,
	"solargraph.hover": true,
	"solargraph.diagnostics": true,
	"solargraph.formatting": true,
	"solargraph.folding": true,
	"solargraph.references": true,
	"solargraph.definitions": true,
	"solargraph.symbols": true,

	"vimlsp.diagnostic.enable": false,

	"languageserver": {
		"haskell": {
			"command": "haskell-language-server-wrapper",
			"args": ["--lsp"],
			"rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
			"filetypes": ["haskell", "lhaskell"],
			"settings": {
				"haskell": {
					"formattingProvider": "brittany"
				}
			}
		},
		"latex": {
			"command": "texlab",
			"ignoredRootPaths": ["~"],
			"filetypes": ["tex", "bib", "plaintex", "context"],
			"settings" : {
				"bibtex" : {
					"formatting" : {
						"lineLenght" : 120,
						"formatter" : "texlab"
					}
				},
				"latex": {
					"build": {
						"args": [
							"-pdf",
							"-shell-escape",
							"-interaction=nonstopmode",
							"-synctex=1",
							"-file-line-error",
							"%f"
						],
						"executable": "latexmk",
						"onSave": false
					},
					"forwardSearch": {
						"args": [ "%p" ],
						"onSave": false,
						"executable": "zathura"
					},
					"lint": {
						"onChange": true,
						"onSave": true
					}
				}
			}
		},
		"lua": {
			"command": "/usr/bin/lua-language-server",
			"args": ["-E", "/usr/share/lua-language-server/main.lua"],
			"filetypes": [ "lua" ],
			"rootPatterns": [".git"],
			"settings": {
				"Lua": {
					"runtime": {
						"version": "LuaJIT"
					},
					"hint": {
						"enable": false,
						"setType": false
					},
					"compleiton": {
						"keywordSnippet": "Both"
					},
					"diagnostics": {
						"enable": false,
						"globals": [ "vim", "define", "it", "describe", "before_each", "after_each" ],
						"disable": [ "lowercase-global" ]
					},
					"workspace": {
						"library": {
							"/usr/share/nvim/runtime/lua": true,
							"/usr/share/nvim/runtime/lua/vim/lsp": true
						}
					}
				}
			}
		},
		"python": {
			"command": "pyls",
			"filetypes": ["python"],
			"trace.server": "verbose",
			"settings": {
				"pyls": {
					"enable": true,
					"trace": {
					"server": "verbose"
					},
					"commandPath": "",
					"configurationSources": ["pycodestyle"],
					"plugins": {
						"jedi_completion": {
							"enabled": true
						},
						"jedi_hover": {
							"enabled": true
						},
						"jedi_references": {
							"enabled": true
						},
						"jedi_signature_help": {
							"enabled": true
						},
						"jedi_symbols": {
							"enabled": true,
							"all_scopes": true
						},
						"mccabe": {
							"enabled": true,
							"threshold": 15
						},
						"preload": {
							"enabled": true
						},
						"pycodestyle": {
							"enabled": true
						},
						"pydocstyle": {
							"enabled": false,
							"match": "(?!test_).*\\.py",
							"matchDir": "[^\\.].*"
						},
						"pyflakes": {
							"enabled": true
						},
						"rope_completion": {
							"enabled": true
						},
						"yapf": {
							"enabled": true
						}
					}
				}
			}
		}
	}
}
