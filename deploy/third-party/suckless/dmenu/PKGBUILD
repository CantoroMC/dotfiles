# Maintainer: Marco Cantoro <marco dot cantoro92 at outlook dot it>

pkgname=dmenu-git
pkgver=5.0
pkgrel=1
pkgdesc="A dynamic menu for X"
arch=('x86_64')
url="https://tools.suckless.org/dmenu"
license=('MIT')
depends=(
  'expat'
  'fontconfig'
  'freetype2'
  'glib2'
  'graphite'
  'harfbuzz'
  'libpng'
  'libxau'
  'libxcb'
  'libxdmcp'
  'libx11'
  'libxft'
  'libxrender'
  'pcre'
  'zlib'
)
makedepends=('git')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
source=('git+https://github.com/CantoroMC/dmenu')
md5sums=('SKIP')

build() {
	cd "$srcdir/${pkgname%-git}"
	make
}

package() {
  local licdir="$pkgdir/usr/share/licenses/${pkgname%-git}"
  local docdir="$pkgdir/usr/share/doc/${pkgname%-git}"

	cd "$srcdir/${pkgname%-git}"
	make PREFIX=/usr DESTDIR="$pkgdir" install

  install --mode 0644 -D --target-directory "$licdir" "$srcdir/${pkgname%-git}/LICENSE"
  install --mode 0644 -D --target-directory "$docdir" "$srcdir/${pkgname%-git}/README.md"
}
