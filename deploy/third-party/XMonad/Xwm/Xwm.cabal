name:               Xwm
version:            0.15
cabal-version:      >=1.10
build-type:         Simple
license:            GPL-3
license-file:       LICENSE
copyright:          Copyright (c) 2020 Marco Cantoro
author:             Marco Cantoro <marco.cantoro92@outlook.it>
maintainer:         Marco Cantoro <marco.cantoro92@outlook.it>
stability:          experimental
homepage:           http://xmonad.org
bug-reports:        https://github.com/CantoroMC/dotfiles
synopsis:           XMonad Configuration
description:        Custom build of XMonad using cabal
category:           Graphics
tested-with:        GHC == 8.10.4
extra-source-files: README.md, build, src/.ghci

library
  hs-source-dirs:   src/lib
  exposed-modules:  Bindings.Keys
                    , Config.Colors
                    , Config.Theme
                    , Config.Workspaces
                    , Layout.Tatami
                    , Layout.Hook
                    , Log.StatusBar
                    , Manage.Util
                    , Manage.Hook
                    , Startup.Hook
  build-depends:    base
                    , containers
                    , mtl
                    , regex-compat
                    , xmonad
                    , xmonad-contrib
                    , X11
  default-language: Haskell2010

executable xwm
  main-is:          Main.hs
  hs-source-dirs:   src
  ghc-options:      -Wall -Werror -fno-warn-missing-signatures
  build-depends:    base
                    , xmonad
                    , xmonad-contrib
                    , X11
                    , Xwm
  default-language: Haskell2010
