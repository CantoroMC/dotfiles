name:               xmobarbarian
version:            0.1.0
cabal-version:      >=1.20
build-type:         Simple
license:            GPL-3
license-file:       LICENSE
copyright:          Copyright (c) 2020 Marco Cantoro
author:             Marco Cantoro <marco.cantoro92@outlook.it>
maintainer:         Marco Cantoro <marco.cantoro92@outlook.it>
stability:          experimental
homepage:           http://xmobar.org
bug-reports:        https://github.com/CantoroMC/dotfiles
synopsis:           XMobar Configuration
description:        My personal xmonad configuration
category:           System
tested-with:        GHC == 8.10.2, GHC == 8.10.3
data-files:         icons/**/*.xpm, src/*
extra-source-files: README.org, build


library
  hs-source-dirs:   src/lib
  exposed-modules:  Config, Monitors
  build-depends:    base, xmobar >= 0.37
  -- other-modules:    Paths_xmobarbarian
  default-language: Haskell2010


executable xmobarb
  main-is:          xmobar.hs
  hs-source-dirs:   src
  ghc-options:      -Wall -Werror -fno-warn-missing-signatures
  build-depends:    base >= 4.7, xmobar >= 0.37, xmobarbarian
  default-language: Haskell2010
