name:               xmonadio
version:            0.13
cabal-version:      >=1.10
build-type:         Simple
license:            GPL-3
license-file:       LICENSE
copyright:          Copyright (c) 2020 Marco Cantoro
author:             Marco Cantoro <marco.cantoro92@outlook.it>
maintainer:         Marco Cantoro <marco.cantoro92@outlook.it>
stability:          experimental
homepage:           http://xmonad.org
bug-reports:        https://github.com/CantoroMC/dotfiles
synopsis:           XMonad Configuration
description:        My personal xmonad configuration
category:           Graphics
tested-with:        GHC == 8.10.2, GHC == 8.10.3, GHC == 8.10.4
extra-source-files: README.org, build, src/.ghci


library
  hs-source-dirs:   src/lib
  exposed-modules:  Bindings.Util
                    , Bindings.Bind
                    , Bindings.Keys
                    , Bindings.Mouse
                    , Config.Color
                    , Config.Theme
                    , Config.Workspace
                    , Layout.Tatami
                    , Layout.Util
                    , Layout.Hook
                    , Log.XMobar
                    , Log.Hook
                    , Manage.Util
                    , Manage.Hook
                    , Startup.Hook
                    , Urgency.Hook
  build-depends:    base
                    , containers
                    , mtl
                    , regex-compat
                    , xmonad
                    , xmonad-contrib
                    , X11
  default-language: Haskell2010


executable xmonad-x86_64-linux
  main-is:          xmonad.hs
  hs-source-dirs:   src
  ghc-options:      -Wall -Werror -fno-warn-missing-signatures
  build-depends:    base
                    , xmonad
                    , xmonad-contrib
                    , xmonadio
                    , X11
  default-language: Haskell2010
