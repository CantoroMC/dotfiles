               , XMonad.Local.Config.Theme
               , XMonad.Local.Config.Workspace
               , XMonad.Local.Bindings.Util
               , XMonad.Local.Bindings.Bind
               , XMonad.Local.Bindings.Keys
               , XMonad.Local.Bindings.Mouse
               , XMonad.Local.Layout.Util
               , XMonad.Local.Layout.Hook
               , XMonad.Local.Log.XMobar
               , XMonad.Local.Log.Hook
               , XMonad.Local.Manage.Util
               , XMonad.Local.Manage.Hook
               , XMonad.Local.Startup.Hook
               , XMonad.Local.Urgency.Hook
