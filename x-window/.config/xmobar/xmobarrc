            [ "--t", "<action=`st htop` button=3><usedipat> <usedratio></action>"
            , "-L", "40"
            , "-H", "90"
            , "-l", "#F07178"
            , "-n", "#B8CC52"
            , "-h", "#FF3333"
            , "-p", "2"
            , "-S", "True"
            , "--"
                , "--used-icon-pattern" , "<icon=ram/ram_%%.xpm/>"
            ] 10
        , Run DynNetwork
            [ "-t" , "<txipat><rxipat>"
            , "-L", "0"
            , "-H", "5000"
            , "-l", "#FF3333"
            , "-n", "#95E6CB"
            , "-h", "#B8CC52"
            , "-m", "8"
            , "-S", "True"
            , "-d", "1"
            , "--"
                , "--rx-icon-pattern" , "<icon=network/rx/network_rx_%%.xpm/>"
                , "--tx-icon-pattern" , "<icon=network/tx/network_tx_%%.xpm/>"
            ] 10
        ]

    -- layout
    , sepChar =  "*"
    , alignSep = "}{"
    , template = "<action=`xmenu-apps` button=1><fn=1> </fn></action><icon=separators/separator.xpm/> *dynnetwork*<icon=separators/separator.xpm/> *date* <icon=separators/separator.xpm/> *LIML* <icon=separators/separator.xpm/> *mpd* <icon=separators/separator.xpm/>}*UnsafeStdinReader*{<icon=separators/separator.xpm/> *memory* <icon=separators/separator.xpm/> *multicpu* <icon=separators/separator.xpm/> *multicoretemp* <icon=separators/separator.xpm/> <action=`st sudo pacman -Syu` button=3>*pacman*</action> *battery0* *battery1* <icon=separators/separator.xpm/> *bright* <icon=separators/separator.xpm/> *default:Master* <icon=separators/separator.xpm/> *kbd* <icon=separators/separator.xpm/> *trayerpad*"
}

