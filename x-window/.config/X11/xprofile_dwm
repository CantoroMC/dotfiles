# Status bar
slstatus 2>&1 >/dev/null &
# Network manager-applet
nm-applet &
# Bluetooth
blueberry-tray &
# System Clipboard
parcellite &

# Screen configuration and wallpaper
# Xrandr wrapper to setup the native monitor even when on a dock station
Thinkpad &
# Redshift
redshift -l 45.48:9.19 -t 6500:3500 -m randr &
# Feh wrapper to pick a random wallpaper from ~/Pictures/wallpapers
setbg &

# Conky
conky -c ${XDG_CONFIG_HOME}/conky/conky_left.lua &
conky -c ${XDG_CONFIG_HOME}/conky/conky_right.lua &

# vim:ft=sh
