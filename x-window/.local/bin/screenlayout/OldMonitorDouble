#!/bin/sh

xrandr \
  --output eDP1 --primary --mode 1600x900 --pos 0x0 --rotate normal \
  --output DP1 --off \
  --output DP2 --off \
  --output DP2-1 --off \
  --output DP2-2 --off \
  --output DP2-3 --mode 1280x1024 --pos 1600x56 --rotate normal \
  --output HDMI1 --off \
  --output HDMI2 --off \
  --output VGA1 --off \
  --output VIRTUAL1 --off \
  --output eDP-1-2 --off \
  --output DVI-D-1-1 --off
