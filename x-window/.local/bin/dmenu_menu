#!/bin/sh

#      ﲃ                     אּ     

apps="
 Baobab						app:baobab
 Disks							app:gnome-disks
 EasyTag						app:easytag
 Evince						app:evince
 FileManaegr				app:thunar
 Firefox						app:firefox
 Gpick							app:gpick
冀 ParaView					app:paraview
 RadioTray					app:radiotray-ng
 TextEditor				app:xed
 Torrent						app:transmission-gtk
禍SUSE Imagewriter	app:imagewriter
 Xboard						app:xboard -fcp "/home/cantoro/Documents/chess/engines/stockfish12_modern" -fd "/home/cantoro/Documents/chess/engines" -fn "Stockfish12" -fUCI
 Zathura						app:zathura
"

echo "$apps" |                                                    # List apps in the list
  grep -P "^$(echo "$apps" | grep "app:" | sed 's/\t.*//g'|       # Filter app Names
  dmenu -l 10 -g 1 -y 23 -W 300 -p "App: " |                      # Pass it to dmenu
  awk '{print $1}')\s" | sed 's/.*app://' |                       # Retrieve corresponding executable
  ${SHELL:-"/bin/sh"} &                                           # Execute it

