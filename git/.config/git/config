[user]
	name = Marco Cantoro
	email = marco.cantoro92@outlook.it

[github]
	user = CantoroMC

[core]
	editor = nvim
	pager = diff-so-fancy --color | less --tabs=4 -RFX
	autocrlf = input
	trustctime = false

[credential]
	username = CantoroMC
	helper = store

[commit]
	template = ~/.config/git/commitMessage.txt
	status = true

[diff]
	algorithm = histogram
	submodule = log

[status]
	submodulesummary = 1

[pull]
	rebase = false

[init]
	defaultBranch = main

[help]
	autocorrect = 20
	browser = vivaldi-stable

[alias]
	alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
	visual = !gitk
    # Examine History and State
	contrib = shortlog --summary --numbered
	df = diff --word-diff
	dca = diff --cached
	ds = diff --staged
	last = log -1 HEAD
	lg = log -p
	lst = log --stat -p
	lgd = log --graph --decorate --all
	ll = log --pretty=oneline --graph --abbrev-commit
	lol = log --oneline --decorate --graph
	lolp = log --graph --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)' --all
	lolD = log --graph --pretty='%Cred%h%Creset %Cgreen(%ar)%Creset %s %C(dim white)%an%Creset %C(auto)%d%Creset'
	lolS = log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --stat
	ld = "!sh -c \"git log --since '${1:-1} days ago' --oneline --author $(git config user.email)\" -"
	st = status
	sts = status -sb
	stl = ls-files -m -o --exclude-standard
	fg = ls-files | grep
    # Work on the current change
	aa = add --all
	ap = add --patch
	unstage = reset --hard HEAD
    # Grow, Mark and Tweak your common history
	ciam = commit -am
	amend = commit --amend --reuse-message=HEAD
    # Collaborate
	pom = push origin "$(git_current_branch)"
	puom = pull origin "$(git_current_branch)"
	pf = push --force
    # Submodules
	spush = push --recurse-submodules=on-demand
	supdate = submodule update --remote --merge
    # FigureOut
	cr = clone --recursive
	g = grep --break --heading --line-number
	patch = !git --no-pager diff --no-color
	pr = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
	show-ignored = "! git clean -ndX | perl -pe 's/Would remove/Ignored:/'"

[color]
	ui = true
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = "blue black bold"
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = blue reverse
[color "diff-highlight"]
	oldNormal = red
	oldHighlight = red bold 52
	newNormal = green
	newHighlight = green bold 22
[color "status"]
	header = blue
	branch = white bold
	added = green bold
	changed = red
	untracked = blue bold
	deleted = red bold

